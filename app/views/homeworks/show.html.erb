<% provide(:title, @task.task_name) %>

<p>
	<%= @task.task_name %>
</p>

<ul>
	<% for choice in @task.choices %>
		<li>
			<%= question_no = TaskChoice.find_by(task_id: @task.id, choice_id: choice.id).question_no %>
			. 
			<%= choice.question %>
			<ul>
				<li>A. <%= choice.a %></li>
				<li>B. <%= choice.b %></li>
				<li>C. <%= choice.c %></li>	
				<li>D. <%= choice.d %></li>
				<li>My Answer: <%= Answer.find_by(homework_id: @homework.id, question_no: question_no).content %></li>
				<li>Right Answer: <%= choice.answer %></li>
			</ul>
		</li>
	<% end %>
</ul>